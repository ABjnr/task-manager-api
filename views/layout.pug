doctype html
html
  head
    title Task Manager
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style.
      body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
      header, footer { background: #f4f4f4; padding: 1em; }
      nav ul { list-style: none; padding: 0; display: flex; gap: 1em; }
      main { padding: 2em; }
  body
    header
      h2 Task Manager
      nav
        ul
          li: a(href="/") Home
          if !user
            li: a(href="/login") Login
            li: a(href="/register") Register
          else
            li: a(href="/logout") Logout
    main
      block content
    footer
      p &copy; #{year} Task Manager. All rights reserved.